[user]
  name = John Watson
  email = john@dctrwatson.com

[alias]
  st = status -sb
  co = checkout
  ci = commit
  lol = log --pretty=format:'%Cred%h %Creset%s %Cgreen(%an)' --graph --decorate
  new = ls-files --others --exclude-standard
  added = diff --cached --name-only
  newauthor = commit --amend --reset-author -C HEAD
  subtree-add = "!f() { git subtree add --prefix $2 $1 master --squash; }; f"
  subtree-pull =  "!f() { git subtree pull --prefix $2 $1 master --squash; }; f"

[format]
  pretty = %C(magenta reverse)%h%Creset %Cgreen[%cr]%Creset (%an) %s

[diff]
  algorithm = patience
  wordRegex = [^[:space:]]
  compactionHeuristic = 1
  noprefix = true

[pager]
  log = diff-highlight | less
  show = diff-highlight | less
  diff = diff-highlight | less

[interactive]
  diffFilter = diff-highlight

[color]
  ui = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  whitespace = red reverse
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
  commit = yellow

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[help]
  autocorrect = 1

[core]
  whitespace = tab-in-indent,tabwidth=4,trailing-space,cr-at-eol
  autocrlf = input

[push]
  default = upstream

[transfer]
  fsckobjects = true

[fetch]
  fsckobjects = true
  prune = true

[receive]
  fsckobjects = true

[include]
  path = ~/.local_gitconfig

[pack]
  window = 32
  depth = 64
  deltaCacheSize = 1g
  windowMemory = 2g

# Disable for GitHub workflow
#[branch]
#  autoSetupMerge = always
#  autoSetupRebase = always
[http]
	cookiefile = /home/johnw/.gitcookies
