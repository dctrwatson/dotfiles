[user]
  name = John Watson
  email = john@dctrwatson.com

[alias]
  st = status -sb
  co = checkout
  msg = commit --allow-empty -m
  lol = log --pretty=format:'%Cred%h %Creset%s %Cgreen(%an)' --graph --decorate
  unstage = reset HEAD
  done = !git fetch && git rebase origin/master && git checkout master && git merge @{-1} && rake && git push
  up = !git fetch origin && git rebase origin/master
  aa = add .
  new = ls-files --others --exclude-standard
  added = diff --cached --name-only
  today = log --stat --since='1 Day Ago' --graph --pretty=oneline --abbrev-commit --date=relative
  plre = pull --rebase
  ff = merge --ff-only
  newauthor = commit --amend --reset-author -C HEAD

[format]
  pretty = %C(magenta reverse)%h%Creset %Cgreen[%cr]%Creset (%an) %s

[diff]
  algorithm = patience
  wordRegex = [^[:space:]]

[color]
  ui = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  whitespace = red reverse
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
  commit = yellow

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[help]
  autocorrect = 1

[core]
  whitespace=tab-in-indent,tabwidth=4,trailing-space,cr-at-eol
  autocrlf = input

[push]
  default = tracking

[transfer]
  fsckobjects = true

[fetch]
  fsckobjects = true

[receive]
  fsckobjects = true

[include]
  path = ~/.local_gitconfig
