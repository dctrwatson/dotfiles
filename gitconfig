[user]
  name = John Watson
  email = john@dctrwatson.com

[alias]
  co = checkout
  lol = log --pretty=format:'%Cred%h %Creset%s %Cgreen(%an)' --graph --decorate

[format]
  pretty = %C(magenta reverse)%h%Creset %Cgreen[%cr]%Creset (%an) %s

[diff]
  algorithm = patience
  wordRegex = [^[:space:]]

[color]
  ui = auto

[color "branch"]
  current = red
  local = yellow
  remote = green

[color "diff"]
  meta = cyan
  frag = magenta
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[help]
  autocorrect = 1

[core]
  whitespace = tab-in-indent,tabwidth=4,trailing-space,cr-at-eol
  autocrlf = input
  editor = /usr/local/bin/vim 

[push]
  default = tracking
